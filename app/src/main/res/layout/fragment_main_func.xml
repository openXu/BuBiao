<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.yaxon.bubiao.view.TitleLayout
            android:id="@id/titleLayout"
            style="@style/TitleDefStyle"
            app:iconBack="@null"
            app:textcenter="参数配置" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_40"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_onoff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="@dimen/dp_12"
                android:drawableTop="@mipmap/icon_main_func_onoff"
                android:gravity="center"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/sp_12"
                android:text="主动安全开关"/>

            <TextView
                android:id="@+id/tv_zdaqcs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="@dimen/dp_12"
                android:drawableTop="@mipmap/icon_main_func_zdaqcs"
                android:gravity="center"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/sp_12"
                android:text="主动安全参数"/>

            <TextView
                android:id="@+id/tv_wjpylpz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="@dimen/dp_12"
                android:drawableTop="@mipmap/icon_main_func_wjpylpz"
                android:gravity="center"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/sp_12"
                android:text="外接屏预览配置"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_31"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_bbcspz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="@dimen/dp_12"
                android:drawableTop="@mipmap/icon_main_func_bbcspz"
                android:gravity="center"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/sp_12"
                android:text="部标参数配置"/>

            <TextView
                android:id="@+id/tv_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="@dimen/dp_12"
                android:drawableTop="@mipmap/icon_main_func_version"
                android:gravity="center"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/sp_12"
                android:text="软件版本"/>

            <TextView
                android:id="@+id/tv_cspzdrdc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="@dimen/dp_12"
                android:drawableTop="@mipmap/icon_main_func_cspzdrdc"
                android:gravity="center"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/sp_12"
                android:text="参数配置导入导出"/>

        </LinearLayout>
    </LinearLayout>
</layout>

